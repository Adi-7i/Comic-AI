# Environment Configuration Example
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# CRITICAL SECURITY SETTINGS
# Generate a secure random secret key for JWT signing
# Use: openssl rand -hex 32
SECRET_KEY=CHANGE_ME_PLEASE_USE_OPENSSL_RAND_HEX_32

# Application Settings
APP_NAME=Comic AI
APP_VERSION=1.0.0
DEBUG=True

# JWT Token Configuration
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database Configuration
MONGODB_URL=mongodb+srv://adi:adi79@edtech.1k779pg.mongodb.net/
DATABASE_NAME=comic_saas

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
GENERATION_LIMIT_PER_DAY=100

# Plan Limits - FREE
FREE_MAX_PAGES=0
FREE_ALLOW_GENERATION=False
FREE_MONTHLY_QUOTA=0

# Plan Limits - PRO
PRO_MAX_PAGES=3
PRO_WATERMARK_REQUIRED=True
PRO_MONTHLY_QUOTA=50

# Plan Limits - CREATIVE
CREATIVE_MAX_PAGES=10
CREATIVE_WATERMARK_REQUIRED=False
CREATIVE_MONTHLY_QUOTA=200

# CORS Origins (comma-separated for production)
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# ============================================================================
# AZURE IMAGE GENERATION (Step-6)
# ============================================================================

# Azure Image API (DALL-E)
# Get from Azure Portal > Your OpenAI Resource > Keys
AZURE_IMAGE_API_KEY=your-azure-image-api-key-here
AZURE_IMAGE_ENDPOINT=https://your-resource.openai.azure.com
AZURE_IMAGE_MODEL=dall-e-3
AZURE_IMAGE_API_VERSION=2024-02-01
# Provider: "azure" for real API, "mock" for testing without API
AZURE_IMAGE_PROVIDER=mock

# Azure Blob Storage
# Get from Azure Portal > Storage Account > Access Keys
AZURE_BLOB_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=youraccountname;AccountKey=youraccountkey;EndpointSuffix=core.windows.net
AZURE_BLOB_CONTAINER_NAME=comic-images
BLOB_SAS_EXPIRY_HOURS=24

# PDF Generation (Step-7)
PDF_CONTAINER_NAME=comic-pdfs
PDF_SAS_EXPIRY_HOURS=24

# Razorpay Payment Gateway (Step-8)
# Get from https://dashboard.razorpay.com/app/keys
RAZORPAY_KEY_ID=rzp_test_xxxxxxxxxx
RAZORPAY_KEY_SECRET=xxxxxxxxxx
RAZORPAY_WEBHOOK_SECRET=xxxxxxxxxx
RAZORPAY_CURRENCY=INR

# Plan Pricing (in smallest currency unit: paise for INR, cents for USD)
# 1 INR = 100 paise
PRO_PLAN_PRICE=9900          # ₹99.00
CREATIVE_PLAN_PRICE=29900    # ₹299.00

# Free Plan Demo Feature
FREE_STORY_ENABLED=true
